<odoo>

	<report id="report_customer_statement"
        model="res.partner"
        string="Customer Statement"
        report_type="qweb-pdf"
        name="dev_customer_account_statement.cust_statement_template"  
        file="dev_customer_account_statement.cust_statement_template"
        menu="False"/>
        
    
    <record id="paperformat_customer_statement" model="report.paperformat">
        <field name="name">Customer Statement A4</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">55</field>
        <field name="margin_bottom">28</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">50</field>
        <field name="dpi">90</field>
    </record>
    
    <record id="dev_customer_account_statement.report_customer_statement" model="ir.actions.report">
        <field name="paperformat_id" ref="dev_customer_account_statement.paperformat_customer_statement" />
    </record>
    
    
</odoo>
